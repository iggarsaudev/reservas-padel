generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Usuario
model User {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  surnames  String   @db.VarChar(255)
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255)
  role      Role     @default(user)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relación: Un usuario tiene muchos partidos
  matches  Match[]
  bookings Booking[]

  @@map("users")
}

enum Role {
  admin
  user
}

// Pista
model Court {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(255)
  type        CourtType @default(INDOOR)
  surface     Surface   @default(CRISTAL)
  price       Float
  isAvailable Boolean   @default(true)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relación: Una pista tiene muchos partidos
  matches  Match[]
  bookings Booking[]

  @@map("courts")
}

enum CourtType {
  INDOOR
  OUTDOOR
}

enum Surface {
  MURO
  CRISTAL
}

// Partidas
model Match {
  id         Int      @id @default(autoincrement())
  startTime  DateTime @map("start_time") // Cuándo empieza
  endTime    DateTime @map("end_time") // Cuándo acaba
  totalPrice Float    @map("total_price") // Precio pagado (histórico)

  // Relación con Usuario
  userId Int  @map("user_id")
  user   User @relation(fields: [userId], references: [id])

  // Relación con Pista
  courtId Int   @map("court_id")
  court   Court @relation(fields: [courtId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("matches")
}

// Reservas
model Booking {
  id        Int      @id @default(autoincrement())
  date      DateTime @db.Date // Guardaremos solo la fecha (año-mes-dia)
  time      String // Guardaremos la hora como texto ej: "10:30"
  createdAt DateTime @default(now())

  // Relaciones
  userId  Int
  user    User  @relation(fields: [userId], references: [id])
  courtId Int
  court   Court @relation(fields: [courtId], references: [id])

  // Restricción única: No puede haber dos reservas con la misma Pista + Fecha + Hora
  @@unique([courtId, date, time])
}
